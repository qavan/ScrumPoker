    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_auth">

    <fragment
        android:id="@+id/nav_auth"
        android:name="fragments.AuthFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_auth" />

    <fragment
        android:id="@+id/nav_rooms"
        android:name="fragments.RoomsBrowserFragment"
        android:label="@string/menu_rooms"
        tools:layout="@layout/fragment_rooms_browser" />

    <fragment
        android:id="@+id/nav_create_room"
        android:name="fragments.CreateRoomFragment"
        android:label="@string/menu_create_room"
        tools:layout="@layout/fragment_create_room" />

    <fragment
        android:id="@+id/nav_results"
        android:name="fragments.ResultsBrowserFragment"
        android:label="@string/menu_results"
        tools:layout="@layout/fragment_results_browser" />
